<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieNight</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav style="background: rgba(0, 0, 0, 0.3);" class="navbar navbar-expand-sm  navbar-light box-shadow mb-3">
            <div class="container">

                <a class=" text-white text-left" asp-area="" asp-controller="Home" asp-action="Index">MovieNight</a>
                @if ((string)ViewData["Title"] == "Home Page")
                {
                <form class="form-inline ml-5" method="get" asp-controller="Home" asp-action="Index">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search Lobby" aria-label="Search" name="search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
   
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

    <footer style="background: rgba(0, 0, 0, 0.3);" class=" footer text-muted">
        <div class="container">
            &copy; 2020 - MovieNight - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
